<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeChatApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_color</item>
        <item name="colorSecondaryVariant">@color/custom_color_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="fontFamily">@font/yorkie_demo_regular</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="TextInputLayout_custom">

        <item name="colorPrimary">@color/custom_color</item>  //Activated color
        <item name="colorOnSurface">@color/custom_color</item>    //Normal color
        <item name="colorError">@color/red</item>        //Error color

    </style>
</resources>